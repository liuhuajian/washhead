<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f7f7f7"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include android:id="@+id/include_titleview"
        layout="@layout/include_titleview"/>


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_check_sit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="256px"
        android:src="@mipmap/ic_sit"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_sit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/iv_check_sit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="坐姿"
        android:textSize="26px"
        android:textColor="@color/color_808080"
        android:drawableLeft="@mipmap/ic_circle_blue"
        android:drawablePadding="2px"
        android:gravity="center"
        />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_check_ox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="560px"
        android:src="@mipmap/ic_ox_pot"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/iv_check_ox"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="氧气"
        android:textSize="26px"
        android:layout_marginTop="31px"
        android:textColor="@color/color_808080"
        android:drawableLeft="@mipmap/ic_circle_blue"
        android:drawablePadding="2px"
        android:gravity="center"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_confirm"
        android:layout_width="368px"
        android:layout_height="86px"
        android:text="确认"
        android:gravity="center"
        android:background="@drawable/bg_confirm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="34px"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginBottom="87px"
        />
</androidx.constraintlayout.widget.ConstraintLayout>